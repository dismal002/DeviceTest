<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="left|center_vertical|center_horizontal|center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="30dp" android:gravity="center" android:id="@+id/fm_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="300dp" android:minHeight="150dp"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:textSize="25dp" android:id="@+id/fm_prev" android:layout_width="80dp" android:layout_height="50dp" android:text="@string/test_fm_leftarrow"/>
                <Button android:textSize="25dp" android:id="@+id/fm_play" android:layout_width="80dp" android:layout_height="50dp" android:text="@string/test_fm_play"/>
                <Button android:textSize="25dp" android:id="@+id/fm_next" android:layout_width="80dp" android:layout_height="50dp" android:text="@string/test_fm_rightarrow"/>
                <Button android:textSize="25dp" android:id="@+id/fm_sound_sw" android:layout_width="80dp" android:layout_height="50dp" android:text="@string/test_fm_sound_spk"/>
            </LinearLayout>
            <Button android:textSize="25dp" android:id="@+id/fm_search" android:layout_width="match_parent" android:layout_height="50dp" android:text="@string/test_fm_search"/>
            <ListView android:id="@+id/fm_search_list" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <com.android.factorywidget.TestConfirm android:id="@+id/fm_confirm" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
