        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.android.factorywidget.VUMeter android:id="@+id/earphone_VUMeter" android:layout_width="300px" android:layout_height="120px"/>
        </RelativeLayout>
        <TextView android:textSize="25dp" android:gravity="center" android:id="@+id/mic_info" android:background="@color/gray" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/test_mic_testing"/>
    </LinearLayout>
    <com.android.factorywidget.TestConfirm android:id="@+id/mic_confirm" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
