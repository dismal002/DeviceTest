<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/gps_info_id" style="@style/gps_style_1"/>
            <TextView android:id="@+id/gps_timeslap" android:text="@string/test_gps_time" style="@style/gps_style_2"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:text="@string/test_gps_latitude" style="@style/gps_style_1"/>
            <TextView android:id="@+id/gps_latitude_id" style="@style/gps_style_2"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:text="@string/test_gps_longitude" style="@style/gps_style_1"/>
            <TextView android:id="@+id/gps_longitude_id" style="@style/gps_style_2"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:text="@string/test_gps_number" style="@style/gps_style_1"/>
            <TextView android:id="@+id/gps_count_id" style="@style/gps_style_2"/>
        </LinearLayout>
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/gps_satellite_id" android:background="#ff2e2e2e" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
        </ScrollView>
    </LinearLayout>
    <com.dismal.devicetest.ui.TestConfirm android:id="@+id/gps_confirm" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
